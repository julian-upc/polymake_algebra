# FIXME: Template parameters for coefficients and exponents.
# TODO: Move to kernel (mtk).
object Ideal {

	user_method HOMOGENIZE {
		my ($this, $var) = @_;
      die "no implemented yet";
		my $i = new Ideal();

		return $i;
	}

	user_method CONTAINS {
		my ($this, $poly) = @_;

		return 1;
	}

	rule PRIMARY : {
		$this->PRIMARY = 1;
	}
	precondition : PRIME;


	rule PRIMARY : RADICAL.PRIME {
		$this->PRIMARY = $this->RADICAL->PRIME;
	}

	rule ZERO : GENERATORS {
      my $gens = $this->GENERATORS;
		if($gens->size != 0){
			foreach my $p (@{$gens}){
				if(!$p->trivial){
					$this->ZERO = 0;
					return;
				}
			}
		} 
		$this->ZERO = 1;
	}

	rule RING : GENERATORS {
      my $gens = $this->GENERATORS;
		$this->RING = $gens->[0]->get_ring;
	}
	precondition : !ZERO;

}

