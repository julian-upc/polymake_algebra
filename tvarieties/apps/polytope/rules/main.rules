object Polytope {

	property TAILCONE : Polytope;

	rule TAILCONE : FACETS, AFFINE_HULL {
		my $ineq = $this->FACETS;
		my $eq = $this->AFFINE_HULL;
		print $ineq;
		my $newineq = (new Vector<Rational>($ineq->rows)) | $ineq->minor(All,~[0]);
		$this->TAILCONE = new Polytope<Rational>(INEQUALITIES=>$newineq);	
	}

}
